{
  "name": "my-better-t-app",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.27.0",
      "typescript": "^5.7.2"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
